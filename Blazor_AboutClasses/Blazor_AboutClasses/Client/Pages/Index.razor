<hr />
<h1>Pizza</h1>
<div>
    <h2>Pizza: @Pizza.Nome </h2>
    <h2>Data: @Pizza.DataDoCadastro.ToString("dd MM yyyy")</h2>
</div>
<hr />
<h1> Pizzas(Foreach)</h1>
@foreach (var produto in GetProdutos())
{
    <ol>
        <li>
            @if (produto.Nome.Contains("Calabreza"))
            {
                <h3><b>Pizza de calabreza com desconto de 20%</b></h3>
            }
            <h2>Pizza: @produto.Nome </h2>
            <h2>Data: @produto.DataDoCadastro.ToString("dd MM yyyy")</h2>

        </li>
    </ol>
    <hr />
}
<h1> Pizzas(For)</h1>
@for (var i = 0; i < produtos.Count; i++)
{
    <ul>
        <li>
            <div>
                @if (i == produtos.Count - 1)
                    {
                        <h4>Este é o ultimo produto</h4>
                    }

                <h2>@(i+1) Pizza: @produtos[i].Nome </h2>
                <h2>Data: @produtos[i].DataDoCadastro.ToString("dd MM yyyy")</h2>
            </div>
        </li>
    </ul>
}
<hr />
@switch (dia)
{

    case "Monday":
        mensagem = "Este é o segundo dia da semana";
        break;
    case "Thurdsday":
        mensagem = "Este é o segundo dia da semana";
        break;
    case "Friday":
        mensagem = "Este é o segundo dia da semana";
        break;

    default:
        mensagem = "Este é o dia" + dia;
        break;
}
<h1>@mensagem</h1>

