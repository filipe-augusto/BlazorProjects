@page "/"
@inject HttpClient http
<h1> Tarefas   </h1>

<Tarefas  Titulo="Lista de tarfas" tarefas="GetTarefas()" />

@code{
    List<Tarefa> tarefas = new List<Tarefa>();
    protected override async Task OnInitializedAsync()
    {
        tarefas = await http.GetFromJsonAsync<List<Tarefa>>("dados/json.json");
    }
    private List<Tarefa> GetTarefas()
    {
        return tarefas;
    }

}
