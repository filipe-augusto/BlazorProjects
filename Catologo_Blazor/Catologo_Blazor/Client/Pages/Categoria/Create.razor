@page "/Categoria/Create"
@inject HttpClient http
@inject NavigationManager navigation

<h1 class="text-success">Nova categoria</h1>
<EditForm Model="@categoria" OnValidSubmit="@CriarCategoria" >
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label form="nome">Nome</label>
        <div>
            <InputText @bind-Value="@categoria.Nome" class="form-control"> </InputText>
            <ValidationMessage For="@(()=>categoria.Nome)" />
        </div>
    </div>
    <div class="form-group">
        <label form="descricao">Descrição</label>
        <div>
            <InputText @bind-Value="@categoria.Descricao" class="form-control"></InputText>
            <ValidationMessage For="(()=>categoria.Descricao)" />
        </div>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <button @onclick="@(()=> navigation.NavigateTo("categoria"))" class="btn btn-danger">Cancelar</button>
</EditForm>

@code{
    Categoria categoria = new Categoria();
    async Task CriarCategoria()
    {
        await http.PostAsJsonAsync("/api/Categoria", categoria);
        navigation.NavigateTo("categoria");
    }
}