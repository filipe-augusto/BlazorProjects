@inherits AlertBase
@if (IsVisible)
{ 
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-@BackgroundCssClass alert-dismissible fade show" role="alert">
                <img src="/favicon.ico" alt="" class="img-fluid m-r-5" style="width:20px;">
                <strong>@Heading</strong>      @Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
        </div>
    </div>
}